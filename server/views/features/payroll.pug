extends ../layouts/default.pug

block content
    .content__wrapper
        .site__page.payroll(id="feature-page")
            .mini-hero__section
                .container
                    .row
                        .col-lg-12.col-md-12
                            h1.ltr__spacing_1 Payroll
                            .row
                                .col-lg-3.col-md-3
                                    .hero-text
                                        hr
                                        p Manage employee information and email or print payslips for your employees in a few clicks.
        
            .feature-detail__section
                .container
                    .row
                        .col-lg-4.col-md-4.feature-detail__sidebar
                            .panel.panel-default
                                .panel-heading
                                    h3.panel-title Payroll
                                ul.list-group
                                    li.list-group-item 
                                        a(href="/features/payroll/employees") Employees
                                    li.list-group-item 
                                        a(href="/features/payroll/runs") Payroll Runs
                        .col-lg-8.col-md-8.feature-detail__content
                            .row.feature-content
                                .col-lg-12.col-md-12
                                    .feature-image
                                        img.img-responsive(src="/assets/img/screens/bb-payroll.png" alt="Payroll")
                                    .row
                                        .col-lg-12.col-md-12
                                            p Manage employee information and generate your payroll with ease and focus on taking your business to next level.
                                    .row
                                        .col-lg-6.col-md-6
                                            h2 Payslips
                                            p Enter payroll information and email or print payslips for your employees in a few clicks. 
